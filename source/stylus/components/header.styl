header{
	float left
	margin 0 0 30px 0
	padding 5px 0 0 0
	background-color #CE45FF
	border-color #CE45FF
	width 100%
}

nav{
	text-align center
	padding 10px 0
	margin 20px 0 0
	background-color #C560FF
	
	& a, &:visited{
		color #fff
		font-weight 800
		padding 15px 10px
	}
	
	& a.selected, a:hover{
		color: #7000B6
		text-decoration none
	}
	
	& ul {
		list-style none
		margin 0 10px
		padding 0 	
	}
	& li{
		display inline-block
	}
}

#logo{
	text-align center
	margin 0
}

h1{
	font-family 'Changa One', sans-serif
	margin 15px 0
	font-size 1.75em
	font-weight normal
	line-height 0.8em
}

h2{
	font-size 0.75em
	margin -5px 0 0
	font-weight normal
}